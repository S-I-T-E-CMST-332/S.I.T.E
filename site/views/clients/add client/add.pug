extends ../../layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Create Client

        // register form
        form(method='POST' action='')
          div.form-group
            label(for='fname') First Name:
            input#name.form-control(type='text', placeholder='first name' name='fname')
          div.form-group
            label(for='lname') Last Name:
            input#email.form-control(type='text', placeholder='last name' name='lname')
          div.form-group
            label(for='dob') Date of Birth:
            input#favoriteBook.form-control(type='date', placeholder='date of birth' name='dob')
          button.btn.btn-primary(type='submit') Create
        if errors
          ul
            for error in errors
              li != error.msg