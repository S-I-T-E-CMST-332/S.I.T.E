extends ../../layout.pug

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Create Flashcard
        
        // register form
        form(method='POST')
            div.form-group
                label(for='name') Name:
                input#name.form-control(type='text', placeholder='name' name='name')
            .form-group
                input(type="file" id="myFile" name="filename")
            .form-group
                label(for='letter') Letter
                select(name='letter')
                    for letter in letters
                        option(value=letter.letter_id) #{letter.name}
            button.btn.btn-primary(type='submit') Create