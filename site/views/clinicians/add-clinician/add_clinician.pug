extends ../../layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Create User

        // register form
        form(method='POST')
            div.form-group
                label(for='username') Username:
                input#name.form-control(type='text', placeholder='username' name='username')
            div.form-group
                label(for='password') Password:
                input#name.form-control(type='password', placeholder='password' name='password')
            div.form-group
                label(for='fname') First Name:
                input#name.form-control(type='text', placeholder='first name' name='fname')
            div.form-group
                label(for='lname') Last Name:
                input#email.form-control(type='text', placeholder='last name' name='lname')
            div.form-group
                label(for='Phone') Phone:
                input#favoriteBook.form-control(type='text', placeholder='phone number' name='phone')
            div.form-group
                label(for='email') Email:
                input#name.form-control(type='text', placeholder='email' name='email')
            .form-group
                label(for='flag') Check for Supervisor
                input#supervisorCheck(type='checkbox', name='flag')
            .form-group
                label(for='supervisor') Managing Supervisor
                select(name='supervisor')
                    for supervisor in supervisors
                        option(value=supervisor.supervisor_id) #{supervisor.name}
            button.btn.btn-primary(type='submit') Create
        if errors
          ul
            for error in errors
              li != error.msg