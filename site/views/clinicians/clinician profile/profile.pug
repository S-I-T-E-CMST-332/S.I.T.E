extends ...layout.pug

block content

  h1 Clinician: #{clinician.name}
  
  div(style='margin-left:20px;margin-top:20px')

  p #[strong clinician:] 
    a(href=book.clinician.url) #{book.clinician.name}
  p #[strong Summary:] #{book.summary}
  p #[strong ISBN:] #{book.isbn}
  p #[strong Genre:]&nbsp;
    each val, index in book.genre
      a(href=val.url) #{val.name}
      if index < book.genre.length - 1
        |, 

    hr
    p
    a(href=clinician.url+'/delete') Delete clinician
    hr
    p
    a(href=clinician.url+'/update') Update clinician